{
  "name": "react-commentr",
  "version": "1.0.0",
  "description": "React comments component",
  "author": "Niko Ruotsalainen",
  "license": "MIT",
  "main": "./dist/index.js",
  "scripts": {
    "test": "npm run test:jest && npm run test:nightwatch",
    "test:nightwatch": "cd ./tests && nightwatch",
    "test:jest": "jest --coverage ./src",
    "lint": "standard ./src/**/*.js ./tests/**/*.js",
    "build": "NODE_ENV=production webpack --config webpack.config.js",
    "watch": "NODE_ENV=development webpack-dev-server --config webpack.watch.config.js",
    "preversion": "npm config set tag-version-prefix ''",
    "version": "npm run build && git add -f ./dist/index.js",
    "postversion": "git push --tags && git push",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "files": [
    "dist/**"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nruotsal/react-commentr.git"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "7.2.0",
    "@babel/preset-env": "7.2.3",
    "@babel/preset-react": "7.0.0",
    "@babel/register": "7.0.0",
    "@storybook/addon-actions": "4.1.4",
    "@storybook/react": "4.1.4",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.5",
    "chromedriver": "2.45.0",
    "clean-webpack-plugin": "1.0.0",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.7.1",
    "jest": "23.6.0",
    "nightwatch": "1.0.18",
    "prop-types": "15.6.2",
    "react": "16.7.0-alpha.2",
    "react-dom": "16.7.0-alpha.2",
    "standard": "12.0.1",
    "uglifyjs-webpack-plugin": "2.1.1",
    "url-loader": "1.1.2",
    "webpack": "4.28.3",
    "webpack-cli": "3.2.0",
    "webpack-dev-server": "3.1.14"
  },
  "peerDependencies": {
    "prop-types": "^15.x",
    "react": "~16.7.0-alpha",
    "react-dom": "~16.7.0-alpha"
  },
  "dependencies": {
    "classnames": "2.2.6",
    "styled-components": "4.1.3"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "describe",
      "expect",
      "it",
      "jest"
    ]
  }
}
